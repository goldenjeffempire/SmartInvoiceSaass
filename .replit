modules = ["web", "nodejs-20", "bash", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "fontconfig", "freetype", "gdk-pixbuf", "ghostscript", "glib", "harfbuzz", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pango", "shared-mime-info", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Dev Server"

[[workflows.workflow]]
name = "Django Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45139
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "smart_invoice.wsgi:application", "--bind", "0.0.0.0:5000", "--workers", "4", "--timeout"]
build = ["bash", "-c", "pip install -r requirements.txt && python manage.py collectstatic --noinput && python manage.py migrate"]
